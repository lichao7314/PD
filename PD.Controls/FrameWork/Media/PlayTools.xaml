        </Grid.ColumnDefinitions>
        <Rectangle RadiusY="3" RadiusX="3" Grid.ColumnSpan="3" Grid.Row="1">
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FF454444" Offset="1"/>
                    <GradientStop Color="#FF7E7E7E"/>
                    <GradientStop Color="#FF454444" Offset="0.501"/>
                    <GradientStop Color="#FF7E7E7E" Offset="0.5"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <ToggleButton x:Name="btnPlayPuse" Content="ToggleButton" HorizontalAlignment="Left" Grid.Row="1" Width="22" VerticalAlignment="Center" Margin="5,0,0,0" Template="{StaticResource PlayPuseTemplate}" Height="22" ToolTipService.ToolTip="播放" ToolTipService.Placement="Top"/>
        <Button x:Name="btnStop" HorizontalAlignment="Left" Width="22" Height="22" VerticalAlignment="Center" Margin="32,0,0,0" Template="{StaticResource stopBtnTemplate}" ToolTipService.ToolTip="停止" ToolTipService.Placement="Top" Grid.Row="1"/>
        <StackPanel Grid.Column="1" HorizontalAlignment="Left" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0,0,0" Grid.Row="1">
            <TextBlock x:Name="txtBCurrentTime" HorizontalAlignment="Right" TextWrapping="Wrap" Text="00:00" VerticalAlignment="Center" Foreground="White" Margin="0,0,2,0"/>
            <TextBlock HorizontalAlignment="Right" TextWrapping="Wrap" Text="/" VerticalAlignment="Center" Foreground="White"/>
            <TextBlock x:Name="txtBTotalTime" HorizontalAlignment="Right" TextWrapping="Wrap" Text="00:00" VerticalAlignment="Center" Foreground="White" Margin="2,0,0,0"/>
            <TextBlock x:Name="txtBStatus" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Foreground="#FF76FF00" Margin="12,0,0,0" FontSize="12" />
            <TextBlock x:Name="txtBDisplayName" TextWrapping="Wrap" Foreground="White" FontSize="12" Margin="4,0,0,0"/>
        </StackPanel>
        <ToggleButton x:Name="btnList" Content="ToggleButton" VerticalAlignment="Center" Height="22" Template="{StaticResource togListTemplate}" Grid.Row="1" Width="22" HorizontalAlignment="Right" Grid.Column="2" Margin="0,0,60,0"/>
        <ComboBox x:Name="comBtnVolme" HorizontalAlignment="Right" Width="22" Background="#FFFEB115" Height="22" Style="{StaticResource CmbVolmeStyle}" VerticalAlignment="Center" d:LayoutOverrides="Height" Grid.Column="2" Margin="0,0,32,0" ToolTipService.ToolTip="声音" ToolTipService.Placement="Top" Grid.Row="1"/>
        <ToggleButton x:Name="btnFullScreen" Content="ToggleButton" HorizontalAlignment="Right" Grid.Row="1" VerticalAlignment="Center" Margin="0,0,5,0" Width="22" Height="22" Template="{StaticResource FullScreenTamplate}" Grid.Column="2" ToolTipService.ToolTip="全屏" ToolTipService.Placement="Top"/>
        <ProgressBar x:Name="progressBar" Grid.ColumnSpan="3" Style="{StaticResource ProgressBarStyle1}" Value="1.5"/>
    </Grid>
</UserControl>