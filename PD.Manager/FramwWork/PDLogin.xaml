              Background="#1c84b9">
            <Image  Source="/Images/FrameWork/Login/背景.jpg"
                    Stretch="None" />
            <Grid HorizontalAlignment="Center"
                  VerticalAlignment="Center">

                <Image Source="/Images/FrameWork/Login/窗口.png"
